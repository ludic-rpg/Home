---
import BaseLayout from '../layouts/BaseLayout.astro';
import { loadContent } from '../lib/content';

const { frontmatter } = loadContent('en', 'home');

const structuredData = {
  "@context": "https://schema.org",
  "@type": "Person",
  "name": "Ludic RPG",
  "url": "https://ludicrpg.com",
  "image": {
    "@type": "ImageObject",
    "url": "https://ludicrpg.com/assets/ludic-rpg-logo.webp",
    "contentUrl": "https://ludicrpg.com/assets/ludic-rpg-logo.webp",
    "encodingFormat": "image/webp",
    "width": "120",
    "height": "120",
    "caption": "Ludic RPG Logo - Tabletop RPG Designer and Content Creator"
  },
  "description": "Tabletop RPG designer and content creator specializing in Alien RPG and C.O.P.S. RPG projects",
  "jobTitle": "Tabletop RPG Designer",
  "sameAs": [
    "https://reddit.com/r/ludicRPG",
    "https://youtube.com/@ludicRPG",
    "https://discord.gg/WYQMvQcYgP",
    "https://github.com/ludic-rpg",
    "https://patreon.com/ludicRPG"
  ],
  "knowsAbout": ["Tabletop Role-Playing Games", "Alien RPG", "C.O.P.S. RPG", "Game Design", "RPG Content Creation"]
};
---

<BaseLayout
  title={frontmatter.title}
  description={frontmatter.description}
  canonical="https://ludicrpg.com/"
  lang="en"
  keywords="Ludic RPG, tabletop RPG, Alien RPG, COPS RPG, RPG designer, motion tracker, tabletop gaming, RPG content creator, game design, role-playing games"
  structuredData={structuredData}
>
  <!-- Hero Section -->
  <header class="logo-section" id="main">
    <div class="hero-left">
      <div class="logo-container">
        <picture>
          <source srcset="/assets/ludic-rpg-logo.webp" type="image/webp">
          <img
            src="/assets/ludic-rpg-logo.png"
            alt="Ludic RPG Logo - Tabletop RPG Designer and Content Creator"
            class="logo-svg"
            width="120"
            height="120"
            loading="eager"
            fetchpriority="high"
          >
        </picture>
      </div>
      <div>
        <h1>{frontmatter.heroTitle}</h1>
        <p class="hero-tagline">{frontmatter.heroTagline}</p>
      </div>
    </div>
    <nav class="hero-right" aria-label="Social media links">
      <a href="https://reddit.com/r/ludicRPG" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Follow Ludic RPG on Reddit">
        <img src="https://cdn.simpleicons.org/reddit" alt="" width="20" height="20" aria-hidden="true">
        Reddit
      </a>
      <a href="https://youtube.com/@ludicRPG" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Subscribe to Ludic RPG on YouTube">
        <img src="https://cdn.simpleicons.org/youtube" alt="" width="20" height="20" aria-hidden="true">
        YouTube
      </a>
      <a href="https://discord.gg/WYQMvQcYgP" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="Join Ludic RPG Discord server">
        <img src="https://cdn.simpleicons.org/discord" alt="" width="20" height="20" aria-hidden="true">
        Discord
      </a>
      <a href="https://github.com/ludic-rpg" target="_blank" rel="noopener noreferrer" class="social-link" aria-label="View Ludic RPG on GitHub">
        <img src="https://cdn.simpleicons.org/github/white" alt="" width="20" height="20" aria-hidden="true">
        GitHub
      </a>
      <a href="https://patreon.com/ludicRPG" target="_blank" rel="noopener noreferrer" class="social-link full-width" aria-label="Support Ludic RPG on Patreon">
        <img src="https://cdn.simpleicons.org/patreon/white" alt="" width="20" height="20" aria-hidden="true">
        Support me on Patreon
      </a>
    </nav>
  </header>

  <!-- About Section -->
  <section class="wireframe-border">
    <div class="space-y-4">
      <div style="display: flex; justify-content: space-between; align-items: baseline; border-bottom: 1px solid hsl(var(--border)); padding-bottom: 0.5rem;">
        <h2 style="border: none; padding: 0; margin: 0;">About</h2>
        <em style="font-size: 0.875rem;">
          <a href="/about" style="color: hsl(var(--foreground)); text-decoration: underline;">
            â†’ Who's behind Ludic RPG?
          </a>
        </em>
      </div>
      <p>
        Creative experiments mixing narrative, visuals, props, and technology to design rich tabletop RPG experiences.
        <br/>
        <em>A space for imagination, fun, and design to meet.</em>
      </p>
    </div>
  </section>

  <!-- Alien RPG Projects Section -->
  <section class="wireframe-border glow-green">
    <div class="space-y-6">
      <h2>Alien RPG</h2>
      <div class="projects-grid">
        <a
          href="https://www.reddit.com/r/alienrpg/comments/1o6pf22/motion_tracker_app_for_inpersontabletop/"
          target="_blank"
          rel="noopener noreferrer"
          class="project-card with-bg-image"
          style="--bg-image: url('/assets/img/alien-rpg-motion-tracker-app.png')"
          role="article"
          aria-label="Motion tracker app for Alien RPG project"
        >
          <img src="/assets/img/alien-rpg-motion-tracker-app.png" alt="Motion tracker interface display for Alien RPG mobile application" style="display:none;" loading="lazy">
          <h3>Motion tracker for Alien RPG</h3>
          <p>IOS/Android app using the phone sensor that replicate the famous motions tracker from the movie Aliens.</p>
        </a>
        <a
          href="https://field.ludicrpg.com/"
          target="_blank"
          rel="noopener noreferrer"
          class="project-card with-bg-image"
          style="--bg-image: url('/assets/img/alien-rpg-schematic-map-visualizer.png')"
          role="article"
          aria-label="Schematic map visualizer for Alien RPG project"
        >
          <img src="/assets/img/alien-rpg-schematic-map-visualizer.png" alt="Schematic map visualizer showing tactical grid layout for Alien RPG" style="display:none;" loading="lazy">
          <h3>Schematic map visualizer for Alien RPG</h3>
          <p>Web app to display map schematics.</p>
        </a>
        <a
          href="https://youtu.be/_YHzzQV7u2o?si=zU2xk-VaJQ9NdXlI"
          target="_blank"
          rel="noopener noreferrer"
          class="project-card with-bg-image"
          style="--bg-image: url('/assets/img/alien-rpg-bishop-video-intro.png')"
          role="article"
          aria-label="Bishop video intro for Alien RPG project"
        >
          <img src="/assets/img/alien-rpg-bishop-video-intro.png" alt="Bishop character from Aliens movie briefing scene for Heart of Darkness campaign" style="display:none;" loading="lazy">
          <h3>Video intro for Alien RPG</h3>
          <p>Featuring Bishop from the movies, briefing (with french audio) for the Heart of Darkness campaign.</p>
        </a>
        <a
          href="https://youtu.be/X-kTYpXv9sQ?si=BwzDn934RbJjisiW"
          target="_blank"
          rel="noopener noreferrer"
          class="project-card with-bg-image"
          style="--bg-image: url('/assets/img/alien-rpg-cethorina-erebos-video-clip.png')"
          role="article"
          aria-label="Alien RPG video clip project"
        >
          <img src="/assets/img/alien-rpg-cethorina-erebos-video-clip.png" alt="Cethorina and Erebos spacecraft illustrations from Heart of Darkness Alien RPG campaign" style="display:none;" loading="lazy">
          <h3>Video clip for Alien RPG</h3>
          <p>Act II video featuring the original illustrations of the Cethorina and Erebos from Heart of Darkness.</p>
        </a>
        <a
          href="https://www.reddit.com/r/alienrpg/comments/1np4w25/draconis_2_system/"
          target="_blank"
          rel="noopener noreferrer"
          class="project-card with-bg-image"
          style="--bg-image: url('/assets/img/alien-rpg-draconis-26-system-illustration.png')"
          role="article"
          aria-label="Draconis 26 system illustration for Alien RPG project"
        >
          <img src="/assets/img/alien-rpg-draconis-26-system-illustration.png" alt="Draconis 26 solar system illustration for Heart of Darkness Alien RPG campaign setting" style="display:none;" loading="lazy">
          <h3>Illustration of Draconis 26 system for Alien RPG</h3>
          <p>Simple illustratoin to represent the solar system where the campaign Heart of Darkness takes place.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- C.O.P.S. RPG Projects Section -->
  <section class="wireframe-border glow-blue">
    <div class="space-y-6">
      <h2>C.O.P.S. RPG</h2>
      <div class="projects-grid">
        <a href="#" target="_blank" rel="noopener noreferrer" class="project-card">
          <h3>Cards for COPS RPG</h3>
          <p>Initiative cards, Attitude cards, and Ammo cards for COPS combat system.</p>
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer" class="project-card">
          <h3>3D printable model card holder shaped as gun magazine for COPS ammo cards</h3>
          <p>Made by AST.</p>
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer" class="project-card">
          <h3>News anchor video #1 for COPS RPG</h3>
          <p>COPS Channel news anchor #1 intro for the campaign</p>
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer" class="project-card">
          <h3>Character sheets for COPS RPG</h3>
          <p>An extended character sheet respecting the original design.</p>
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer" class="project-card">
          <h3>News anchor video #2 for COPS RPG</h3>
          <p>COPS Channel news anchor #2 intro for the campaign</p>
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer" class="project-card">
          <h3>Music clip with Californian music award teaser for COPS RPG</h3>
          <p>Clip to display during the campaign.</p>
        </a>
        <a href="#" target="_blank" rel="noopener noreferrer" class="project-card">
          <h3>456 NPC library with basic info, affiliation and photo for  COPS RPG</h3>
          <p>A full library of NPC to populate Los Angeles.</p>
        </a>
      </div>
    </div>
  </section>

  <!-- Footer -->
  <footer style="margin-top: 4rem; padding: 2rem; text-align: center; border-top: 1px solid hsl(var(--border));">
    <a href="/code-of-conduct" style="color: hsl(var(--muted-foreground)); text-decoration: none; font-size: 0.875rem; transition: color 0.2s ease;">
      Code of Conduct
    </a>
  </footer>
</BaseLayout>
