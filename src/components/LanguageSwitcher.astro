---
const currentPath = Astro.url.pathname;
const isFrench = currentPath.startsWith('/fr');

const languages = {
  en: { label: 'English', path: currentPath.replace('/fr', '') || '/' },
  fr: { label: 'Fran√ßais', path: isFrench ? currentPath : `/fr${currentPath}` }
};

const currentLang = isFrench ? 'fr' : 'en';
---

<div class="language-switcher">
  {Object.entries(languages).map(([lang, { label, path }]) => (
    <a
      href={path}
      class:list={['lang-link', { active: currentLang === lang }]}
      hreflang={lang}
      aria-label={`Switch to ${label}`}
    >
      {lang.toUpperCase()}
    </a>
  ))}
</div>

<style>
  .language-switcher {
    display: flex;
    gap: 0.5rem;
    align-items: center;
  }

  .lang-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    padding: 0.375rem 0.75rem;
    font-size: 0.875rem;
    font-weight: 500;
    color: hsl(var(--foreground));
    text-decoration: none;
    background-color: rgba(255, 255, 255, 0.05);
    border: 1px solid hsl(var(--border));
    transition: all 0.2s ease;
  }

  .lang-link:hover {
    background-color: rgba(255, 255, 255, 0.08);
    border-color: hsl(var(--foreground));
  }

  .lang-link.active {
    background-color: rgba(255, 255, 255, 0.1);
    border-color: hsl(var(--foreground));
    cursor: default;
  }
</style>
